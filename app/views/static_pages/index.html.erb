<div class="container">
  <h1>Welcome to Brandon's Bike Shop</h1>
  <p>The best bicycle shop in Jacksonville!</p>
  <%= image_tag("racebike.png", class: "img-responsive my-image", alt: "Bike") %>
  <!-- Display the latest 5 star comment about one of our bikes. -->
  <% if $redis.hexists("latest_five_star_comment", "name") %>
    <div class="latest-comment">
      <h2> What people are saying about our bikes </h2>
      <p>Comment by <em><%= $redis.hget("latest_five_star_comment", "name") %></em> about <%= $redis.hget("latest_five_star_comment", "product") %></p>
      <p><%= $redis.hget("latest_five_star_comment", "comment") %></p>
    </div> <!-- /latest-comment -->
  <% end %>
</div> <!-- /container -->