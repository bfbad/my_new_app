<!-- This partial displays the panels on the product page -->
<% cache product do %>
  <div class="col-md-4 col-sm-6 panel">
    <h1><%= link_to product.name, product %></h1>
    <p><%= product.colour %></p>
    <%= link_to image_tag(product.image_url, class: 'img-responsive'), product %>
    <p><%= product.description %></p>
    <p><strong>$ <%= product.price %></strong></p>
  <!--   <p><%#= link_to "Edit", edit_product_path(product.id) %></p> -->
  </div> <!-- /col -->
<% end %>
