<div class="signup-form col-xs-4 col-xs-offset-4">
  <h1>Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "sr-only" %>

      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password min " + @minimum_password_length.to_s + " characters" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-enter password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div> <!-- /signup-form -->