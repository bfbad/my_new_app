<div class = "container"> 
 
  <!-- Form -->
  <%= flash[:notice] %>

  
  <div class="row">
    <div class="col-sm-4 col-xs-12">
      <h1>Contact Us!</h1>
      <%= form_tag("/static_pages/thank_you") do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true, :type => 'text' %>
      </div>      
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true, :type => 'email'  %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", :required => true, :type => 'text'  %>
      </div>      
      <%= submit_tag "Send" %>   
      <% end %>
    </div>
    <div class = "col-sm-8 col-xs-12">
      <h1>Reach Out!</h1>
      <p>
    	<a class="email-address" href="mailto:brandon@brandonsbikes.com">Brandon@BrandonsBikes.com</a>
      </p>
      <p>
    	443-555-1212
      </p>
    </div>
  </div>
</div> <!-- /container -->